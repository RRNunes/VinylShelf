<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Delivery_Date_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(ISBLANK(Delivery_Date__c)) &amp;&amp; Delivery_Date__c &lt; TODAY()</errorConditionFormula>
    <errorMessage>A data de entrega não pode ser anterior à data atual.</errorMessage>
</ValidationRule>
